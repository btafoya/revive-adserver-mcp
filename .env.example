# Revive Adserver MCP - Environment Configuration Example
# Copy this file to .env and update with your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Revive Adserver API Configuration
REVIVE_API_URL=https://your-revive-instance.com/api
REVIVE_API_USERNAME=your_api_username
REVIVE_API_PASSWORD=your_api_password

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Database Configuration (optional - for advanced features)
# REVIVE_DATABASE_HOST=localhost
# REVIVE_DATABASE_NAME=revive_adserver
# REVIVE_DATABASE_USER=revive_user
# REVIVE_DATABASE_PASSWORD=database_password
# REVIVE_DATABASE_PORT=3306

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARN, ERROR
# LOG_FORMAT=text
# Options: text, json
# LOG_CORRELATION_ID=true

# API Client Configuration
# REVIVE_API_TIMEOUT=30000
# REVIVE_RETRY_ATTEMPTS=3
# REVIVE_RETRY_DELAY=1000

# Connection Pool Settings
# REVIVE_MAX_CONNECTIONS=10
# REVIVE_MIN_CONNECTIONS=2
# REVIVE_CONNECTION_IDLE_TIMEOUT=30000
# REVIVE_CONNECTION_ACQUIRE_TIMEOUT=10000

# Cache Configuration
# REVIVE_ENABLE_CACHE=true
# REVIVE_CACHE_TTL=900
# REVIVE_CACHE_SIZE=100MB

# Performance Optimization
# REVIVE_ENABLE_BATCHING=false
# REVIVE_BATCH_SIZE=10
# REVIVE_BATCH_TIMEOUT=1000
# REVIVE_ENABLE_COMPRESSION=true

# Security Settings
# REVIVE_READONLY_MODE=false
# REVIVE_VALIDATE_SSL=true
# REVIVE_ENABLE_REQUEST_SIGNING=false

# Health Check Configuration
# REVIVE_HEALTH_CHECK_ENABLED=true
# REVIVE_HEALTH_CHECK_INTERVAL=30000
# REVIVE_HEALTH_CHECK_TIMEOUT=5000

# Metrics and Monitoring
# METRICS_ENABLED=false
# METRICS_PORT=9090
# METRICS_PATH=/metrics
# METRICS_COLLECT_API_LATENCY=true
# METRICS_COLLECT_CACHE_STATS=true

# OpenTelemetry Configuration
# OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otel-collector.com
# OTEL_SERVICE_NAME=revive-adserver-mcp
# OTEL_SERVICE_VERSION=1.0.0

# Development Settings
# NODE_ENV=development
# DEBUG_API_REQUESTS=false
# DEBUG_RESPONSES=false
# DEBUG_AUTHENTICATION=false

# =============================================================================
# ENVIRONMENT-SPECIFIC EXAMPLES
# =============================================================================

# Development Environment
# REVIVE_API_URL=https://dev-revive.example.com/api
# LOG_LEVEL=DEBUG
# REVIVE_ENABLE_CACHE=false

# Staging Environment  
# REVIVE_API_URL=https://staging-revive.example.com/api
# LOG_LEVEL=INFO
# REVIVE_CACHE_TTL=300

# Production Environment
# REVIVE_API_URL=https://revive.example.com/api
# LOG_LEVEL=WARN
# REVIVE_MAX_CONNECTIONS=20
# REVIVE_ENABLE_CACHE=true
# REVIVE_CACHE_TTL=600